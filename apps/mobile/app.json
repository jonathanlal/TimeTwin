{
  "expo": {
    "name": "TimeTwin",
    "slug": "timetwin",
    "scheme": "timetwin",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0F12"
    },
    "updates": {
      "url": "https://u.expo.dev/00000000-0000-0000-0000-000000000000"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0F12"
      },
      "package": "com.anonymous.timetwin"
    },
    "web": {
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "Capture",
              "label": "Capture Time",
              "minWidth": "100dp",
              "minHeight": "100dp",
              "description": "Capture the moment instantly",
              "previewImage": "./assets/icon.png"
            }
          ]
        }
      ]
    ],
    "newArchEnabled": true
  }
}
